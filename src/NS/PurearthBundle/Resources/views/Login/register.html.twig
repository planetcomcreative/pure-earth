{% extends 'NSPurearthBundle::layout.html.twig' %}
{% block title %}Register{% endblock %}
{% block body %}
    <div class="row">
        <h3>Please create your account</h3>
        <div class="col-sm-10">
            <form class="form-horizontal recaptcha-form" method="POST">
                {{ form_widget(form.recaptcha) }}
                {{ form_errors(form.recaptcha) }}
                {{ form_rest(form) }}
                <div class="form-group">
                    <button type="submit" id="register_submit" class="btn pull-right">Register</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
