{% extends 'NSPurearthBundle::layout.html.twig' %}
{% block title %}
    Change Password
{% endblock %}
{% block bodyClass %}profile{% endblock %}
{% block body %}
    <h3>Change Password</h3>
    <div class="row">
        <div class="col-sm-10">
            <form class="form-horizontal" method="POST">
                {{ form_rest(form) }}
                <div class="form-group">
                    <button type="submit" class="btn pull-right">Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}