{% extends 'NSPurearthBundle::layout.html.twig' %}
{% block title %}
    Edit Profile
{% endblock %}
{% block bodyClass %}profile{% endblock %}
{% block body %}
    <h3>Personal Info</h3>
    <div class="row">
        <div class="col-sm-10">
            <form class="form-horizontal" method="POST">
                {% for name, field in form if name != 'forceResubscribe' %}
                    {{ form_row(field) }}
                {% endfor %}
                <div class="form-group">
                    {{ form_label(form.forceResubscribe) }}
                    <div class="col-xs-12 col-sm-8">
                        {% if isSubscribed %}
                            {{ form_widget(form.forceResubscribe, {'attr':{'checked':'checked'}}) }}
                        {% else %}
                            {{ form_widget(form.forceResubscribe) }}
                        {% endif %}
                        {{ form_errors(form.forceResubscribe) }}
                    </div>
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <button type="submit" class="btn pull-right">Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
