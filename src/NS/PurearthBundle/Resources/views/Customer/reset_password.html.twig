{% extends 'NSPurearthBundle:Login:login.html.twig' %}
{% block login_form %}
    <form class="col-xs-12 col-sm-8 col-sm-offset-2" action="{% block check_url %}{{ url('resetPassword', {'token':token}) }}{% endblock %}" method="POST" class="margin-bottom-0">
        <h3 class="white">Reset Password</h3>
        <p>Please enter a new password now.</p>
        <div class="form-group m-b-20">
            {{ form_label(form.password.first, null, {'label_attr':{'class':'sr-only'}}) }}
            {{ form_widget(form.password.first, {'attr':{'class':'form-control input-lg', 'placeholder':'New Password', 'autocomplete':'off'}}) }}
        </div>
        <div class="form-group m-b-20">
            {{ form_label(form.password.second, null, {'label_attr':{'class':'sr-only'}}) }}
            {{ form_widget(form.password.second, {'attr':{'class':'form-control input-lg', 'placeholder':'Confirm New Password', 'autocomplete':'off'}}) }}
        </div>
        {{ form_rest(form) }}
        <div class="login-buttons">
            <button type="submit" class="btn btn-success btn-block btn-lg">Change my Password</button>
        </div>
    </form>
{% endblock %}